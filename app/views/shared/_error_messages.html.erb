<% if @user.errors.any? %>
  <div class="error_messages">
    <div class="alert-box alert">
      The form cantains <%=	pluralize(@user.errors.count, 'error') %>
    </div>

    <ul class="panel radius">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>